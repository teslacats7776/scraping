<div class="saved-page-bg">

    <div class="container">

        <div class="row">
            <div class="col s12 m12">
                <div class="scrape-page-header black-text center">Favorites List</div>
                <div class="scrape-page-header3 black-text center">View and Take Notes on Saved Articles</div>
            </div>
        </div>

        {{#each articles}} {{#if this.saved}}
       <div class="row">
            <div class="col s12 m12">
                <div class="card">
                    <div class="card-panel card-panel-top">
                        <span class="white-text">
                            <a href={{this.link}} target="_blank"><h5>{{this.title}}</h5></a>
                        </span>
                    </div>
                    <div class="card-content white">
                      
                        <span class="black-text white">
                                <p>{{this.summary}}</p>
                                <a data-id="{{this._id}}" class="waves-effect waves-light btn btn-medium right delete-article-btn">Delete</a>
                                <a data-id="{{this._id}}" class="waves-effect waves-light btn btn-medium right comment-btn">Notes</a>
                        </span>
                    </div>
                    <div class="card-panel card-panel-bottom"></div>
                </div>
            </div>
        </div>
        {{/if}} {{/each}}

    </div>

</div>